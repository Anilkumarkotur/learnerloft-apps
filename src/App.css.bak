/* Import Poppins font */
@import url("https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700display=swap");

/* CSS Reset and Base Styles */
* {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

/* Import Poppins font */
@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap');

:root {
  /* Spotify-inspired Colors - Light Theme */
  --primary-color: #1DB954;
  --primary-light: #1ED760;
  --primary-dark: #1AA34A;
  --secondary-color: #FF9800;
  --secondary-light: #FFB74D;
  --secondary-dark: #F57C00;
  --surface-color: #ffffff;
  --background-color: #F0F0F0;
  --dark-background: #121212;
  --error-color: #f44336;
  --text-primary: rgba(0, 0, 0, 0.87);
  --text-secondary: rgba(0, 0, 0, 0.6);
  --text-disabled: rgba(0, 0, 0, 0.38);
  --text-on-primary: #ffffff;
  --text-on-secondary: #ffffff;
  --text-on-dark: #FFFFFF;
  --border-color: rgba(0, 0, 0, 0.08);
  
  /* Material Elevations (shadows) */
  --elevation-1: 0px 2px 1px -1px rgba(0,0,0,0.2), 0px 1px 1px 0px rgba(0,0,0,0.14), 0px 1px 3px 0px rgba(0,0,0,0.12);
  --elevation-2: 0px 3px 1px -2px rgba(0,0,0,0.2), 0px 2px 2px 0px rgba(0,0,0,0.14), 0px 1px 5px 0px rgba(0,0,0,0.12);
  --elevation-3: 0px 3px 3px -2px rgba(0,0,0,0.2), 0px 3px 4px 0px rgba(0,0,0,0.14), 0px 1px 8px 0px rgba(0,0,0,0.12);
  --elevation-4: 0px 2px 4px -1px rgba(0,0,0,0.2), 0px 4px 5px 0px rgba(0,0,0,0.14), 0px 1px 10px 0px rgba(0,0,0,0.12);
  
  /* Layout variables */
  --column-width: 33%;
  --spacing-unit: 8px;
  --border-radius: 4px;
  --transition-speed: 0.2s;
}

/* Dark theme variables */
[data-theme="dark"] {
  --primary-color: #1DB954;
  --primary-light: #1ED760;
  --primary-dark: #1AA34A;
  --secondary-color: #FF9800;
  --secondary-light: #FFB74D;
  --secondary-dark: #F57C00;
  --surface-color: #2a2a2a;
  --background-color: #121212;
  --error-color: #ff5c5c;
  --text-primary: rgba(255, 255, 255, 0.87);
  --text-secondary: rgba(255, 255, 255, 0.6);
  --text-disabled: rgba(255, 255, 255, 0.38);
  --text-on-primary: #ffffff;
  --text-on-secondary: #ffffff;
  --text-on-dark: #FFFFFF;
  --border-color: rgba(255, 255, 255, 0.08);
  
  /* Dark theme shadows */
  --elevation-1: 0px 2px 1px -1px rgba(0,0,0,0.3), 0px 1px 1px 0px rgba(0,0,0,0.24), 0px 1px 3px 0px rgba(0,0,0,0.22);
  --elevation-2: 0px 3px 1px -2px rgba(0,0,0,0.3), 0px 2px 2px 0px rgba(0,0,0,0.24), 0px 1px 5px 0px rgba(0,0,0,0.22);
  --elevation-3: 0px 3px 3px -2px rgba(0,0,0,0.3), 0px 3px 4px 0px rgba(0,0,0,0.24), 0px 1px 8px 0px rgba(0,0,0,0.22);
  --elevation-4: 0px 2px 4px -1px rgba(0,0,0,0.3), 0px 4px 5px 0px rgba(0,0,0,0.24), 0px 1px 10px 0px rgba(0,0,0,0.22);
}

html, body {
  height: auto;
  min-height: 100%;
  width: 100%;
  overflow-x: hidden;
  overflow-y: visible;
}

body {
  font-family: 'Roboto', 'Poppins', -apple-system, BlinkMacSystemFont, 'Segoe UI', Helvetica, Arial, sans-serif;
  font-size: 16px;
  line-height: 1.5;
  color: var(--text-primary);
  background-color: var(--background-color);
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

#root {
  height: auto;
  min-height: 100vh;
  width: 100%;
  display: flex;
  flex-direction: column;
}

/* This is critical for react-beautiful-dnd to work correctly */
html, body {
  height: 100%;
}

/* Override the default Vite width constraint */
#root {
  max-width: none;
  margin: 0;
  padding: 0;
  text-align: left;
}

/* Fix for Firefox */
.react-beautiful-dnd-dragging {
  pointer-events: none;
}

/* Material Design App Bar */
header {
  background-color: var(--primary-color);
  color: var(--text-on-primary);
  padding: calc(var(--spacing-unit) * 2);
  box-shadow: var(--elevation-2);
  display: flex;
  align-items: center;
  min-height: 64px;
  position: relative;
  z-index: 10;
}

header h1 {
  font-weight: 500;
  font-size: 20px;
  letter-spacing: 0.15px;
}

/* Board Layout */
.board-container {
  display: flex;
  padding: calc(var(--spacing-unit) * 2);
  height: calc(100vh - 64px);
  overflow-x: auto;
  background-color: var(--background-color);
  width: 100%;
  justify-content: space-between;
}

/* Column Styling - Material Card */
.column {
  background-color: var(--surface-color);
  border-radius: var(--border-radius);
  width: var(--column-width);
  margin: 0 calc(var(--spacing-unit));
  box-shadow: var(--elevation-1);
  display: flex;
  flex-direction: column;
  max-height: 100%;
  flex: 1;
  min-width: 300px;
  overflow: hidden;
}

/* Responsive styles for mobile */
@media screen and (max-width: 768px) {
  :root {
    --column-width: 90%;
  }
  
  .board-container {
    flex-direction: column;
    align-items: center;
    height: auto;
    overflow-y: auto;
    overflow-x: hidden;
  }
  
  .column {
    margin-bottom: calc(var(--spacing-unit) * 3);
    min-width: 0;
    max-height: 400px;
  }
  
  header {
    padding: calc(var(--spacing-unit) * 1.5);
  }
  
  .card-actions {
    flex-direction: column;
    align-items: flex-start;
    gap: calc(var(--spacing-unit) * 1.5);
  }
  
  .votes {
    width: 100%;
    justify-content: space-between;
  }
  
  .modal-content {
    width: 95%;
    padding: calc(var(--spacing-unit) * 2);
  }
  
  .dropdown-content {
    right: 0;
    left: auto;
  }
}

.column-title {
  padding: calc(var(--spacing-unit) * 2);
  font-weight: 500;
  font-size: 16px;
  color: var(--text-primary);
  border-bottom: 1px solid var(--border-color);
  background-color: var(--surface-color);
}

.card-list {
  padding: calc(var(--spacing-unit) * 2);
  flex-grow: 1;
  min-height: 100px;
  overflow-y: auto;
  transition: background-color 0.2s ease;
}

.card-list::-webkit-scrollbar {
  width: 6px;
}

.card-list::-webkit-scrollbar-track {
  background: rgba(0, 0, 0, 0.05);
}

.card-list::-webkit-scrollbar-thumb {
  background: rgba(0, 0, 0, 0.15);
  border-radius: var(--border-radius);
}

/* Card Styling - Material Card */
.card-item {
  background-color: var(--surface-color);
  border-radius: var(--border-radius);
  padding: calc(var(--spacing-unit) * 2);
  margin-bottom: calc(var(--spacing-unit) * 1.5);
  box-shadow: var(--elevation-1);
  transition: box-shadow var(--transition-speed);
}

.card-item:hover {
  box-shadow: var(--elevation-2);
}

.card-item.is-dragging {
  box-shadow: var(--elevation-3);
}

.card-content {
  margin-bottom: calc(var(--spacing-unit) * 1.5);
  word-break: break-word;
  color: var(--text-primary);
}

.card-actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: calc(var(--spacing-unit));
  padding-top: calc(var(--spacing-unit));
  border-top: 1px solid var(--border-color);
}

.votes {
  display: flex;
  align-items: center;
  gap: calc(var(--spacing-unit));
  font-weight: 500;
  color: var(--text-secondary);
}

/* Dropdown styling for export button */
.dropdown {
  position: relative;
  display: inline-block;
}

.dropdown-content {
  display: none;
  position: absolute;
  background-color: var(--surface-color);
  min-width: 160px;
  box-shadow: var(--elevation-2);
  z-index: 15;
  border-radius: var(--border-radius);
  overflow: hidden;
  right: 0;
}

.dropdown-content a {
  color: var(--text-primary);
  padding: calc(var(--spacing-unit) * 1.5);
  text-decoration: none;
  display: block;
  font-size: 14px;
  transition: background-color var(--transition-speed);
  cursor: pointer;
}

.dropdown-content a:hover {
  background-color: rgba(29, 185, 84, 0.08);
}

.dropdown:hover .dropdown-content {
  display: block;
}

.dropdown-button {
  display: flex;
  align-items: center;
  gap: 8px;
  background-color: var(--primary-color);
  color: var(--text-on-primary);
  border: none;
  padding: calc(var(--spacing-unit)) calc(var(--spacing-unit) * 2);
  border-radius: var(--border-radius);
  font-weight: 500;
  cursor: pointer;
  transition: background-color var(--transition-speed);
}

.dropdown-button:hover {
  background-color: var(--primary-dark);
}

.dropdown-button svg {
  width: 16px;
  height: 16px;
}

/* Material Design Button Styles */
.icon-button {
  width: 36px;
  height: 36px;
  border-radius: 50%;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  background-color: transparent;
  color: var(--text-secondary);
  transition: background-color var(--transition-speed);
  font-size: 18px;
  user-select: none;
}

.icon-button:hover {
  background-color: rgba(0, 0, 0, 0.08);
}

.text-button {
  background-color: transparent;
  border: none;
  border-radius: var(--border-radius);
  padding: calc(var(--spacing-unit)) calc(var(--spacing-unit) * 2);
  font-size: 14px;
  font-weight: 500;
  text-transform: uppercase;
  letter-spacing: 0.4px;
  cursor: pointer;
  color: var(--primary-color);
  transition: background-color var(--transition-speed);
}

.text-button:hover {
  background-color: rgba(25, 118, 210, 0.08);
}

/* Add Button - Material Design Floating Action Button style but flat */
.add-button {
  margin: calc(var(--spacing-unit)) calc(var(--spacing-unit) * 2) calc(var(--spacing-unit) * 2);
  padding: calc(var(--spacing-unit) * 1.5);
  background-color: var(--surface-color);
  border: none;
  border-radius: var(--border-radius);
  cursor: pointer;
  text-align: left;
  color: var(--primary-color);
  display: flex;
  align-items: center;
  font-weight: 500;
  font-size: 14px;
  transition: background-color var(--transition-speed);
  box-shadow: var(--elevation-1);
}

.add-button:hover {
  background-color: rgba(0, 0, 0, 0.04);
}

.add-button:before {
  content: "+";
  margin-right: 8px;
  font-size: 18px;
}

/* Modal Styling - Material Dialog */
.modal-overlay {
  background-color: rgba(0, 0, 0, 0.5);
}

.modal-content {
  background-color: var(--surface-color);
  border-radius: var(--border-radius);
  box-shadow: var(--elevation-4);
  width: 500px;
  max-width: 90%;
  padding: calc(var(--spacing-unit) * 3);
}

.modal-content h2 {
  color: var(--text-primary);
  margin-bottom: calc(var(--spacing-unit) * 2);
  font-weight: 500;
  font-size: 20px;
}

.modal-textarea {
  width: 100%;
  min-height: 120px;
  margin: calc(var(--spacing-unit) * 2) 0;
  padding: calc(var(--spacing-unit) * 1.5);
  border: 1px solid var(--border-color);
  border-radius: var(--border-radius);
  resize: vertical;
  font-family: inherit;
  font-size: 16px;
  color: var(--text-primary);
  background-color: var(--surface-color);
  transition: border-color var(--transition-speed);
}

.modal-textarea:focus {
  outline: none;
  border-color: var(--primary-color);
  box-shadow: 0 0 0 2px rgba(25, 118, 210, 0.2);
}

.button-group {
  display: flex;
  justify-content: space-between;
}

.button-group .left {
  display: flex;
  gap: calc(var(--spacing-unit));
}

.button-group .right {
  display: flex;
  gap: calc(var(--spacing-unit));
}

/* Material Design buttons for dialog */
.material-button {
  padding: calc(var(--spacing-unit)) calc(var(--spacing-unit) * 2);
  border: none;
  border-radius: var(--border-radius);
  cursor: pointer;
  font-weight: 500;
  font-size: 14px;
  text-transform: uppercase;
  letter-spacing: 0.4px;
  min-width: 64px;
  transition: background-color var(--transition-speed);
}

.material-button-contained {
  background-color: var(--primary-color);
  color: var(--text-on-primary);
}

.material-button-contained:hover {
  background-color: var(--primary-dark);
}

.material-button-text {
  background-color: transparent;
  color: var(--primary-color);
}

.material-button-text:hover {
  background-color: rgba(25, 118, 210, 0.08);
}

.material-button-danger {
  color: var(--error-color);
}

.material-button-danger:hover {
  background-color: rgba(244, 67, 54, 0.08);
}

/* Merging Banner - Material Snackbar style */
.merging-banner {
  position: fixed;
  bottom: 24px;
  left: 50%;
  transform: translateX(-50%);
  padding: calc(var(--spacing-unit) * 1.5) calc(var(--spacing-unit) * 3);
  background-color: #323232;
  border-radius: var(--border-radius);
  text-align: center;
  z-index: 1000;
  color: white;
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: calc(var(--spacing-unit) * 2);
  box-shadow: var(--elevation-3);
  min-width: 300px;
}

.merging-banner button {
  background-color: transparent;
  border: none;
  border-radius: var(--border-radius);
  padding: calc(var(--spacing-unit)) calc(var(--spacing-unit) * 1.5);
  cursor: pointer;
  color: var(--secondary-light);
  font-weight: 500;
  text-transform: uppercase;
  letter-spacing: 0.4px;
  font-size: 14px;
}

/* Theme transition */
* {
  transition: background-color 0.3s ease, color 0.3s ease, border-color 0.3s ease, box-shadow 0.3s ease;
}

/* Dark theme specific overrides */
[data-theme="dark"] .card-list::-webkit-scrollbar-track {
  background: rgba(255, 255, 255, 0.05);
}

[data-theme="dark"] .card-list::-webkit-scrollbar-thumb {
  background: rgba(255, 255, 255, 0.1);
}

[data-theme="dark"] .icon-button:hover {
  background-color: rgba(255, 255, 255, 0.08);
}

[data-theme="dark"] .add-button:hover {
  background-color: rgba(255, 255, 255, 0.04);
}

/* Legacy styles from Vite */
.logo {
  height: 6em;
  padding: 1.5em;
  will-change: filter;
  transition: filter 300ms;
}
.logo:hover {
  filter: drop-shadow(0 0 2em #646cffaa);
}
.logo.react:hover {
  filter: drop-shadow(0 0 2em #61dafbaa);
}

@keyframes logo-spin {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

@media (prefers-reduced-motion: no-preference) {
  a:nth-of-type(2) .logo {
    animation: logo-spin infinite 20s linear;
  }
}

.card {
  padding: 2em;
}

.read-the-docs {
  color: #888;
}
